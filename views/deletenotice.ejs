<html>
<head>
<style>
table {
  font-family: arial, sans-serif;
  border-collapse: collapse;
  width: 100%;
}

td, th {
  border: 1px solid #dddddd;
  text-align: left;
  padding: 8px;
  
  padding-top: 0px;
  padding-bottom: 0px;
}

tr:nth-child(even) {
  background-color: #dddddd;
}
html{
       height: 100%;
   }
   body{
    background-image:linear-gradient(90deg,rgb(250, 240, 242),rgb(238, 231, 233));
       
       height: 100%;
       margin:0;
   }
   .additional{
       display: flex;
       height: 100%;
       justify-content: space-between;
       align-items: flex-start;
   }
   .form1{
       display: flex;
      flex-direction: column;
       line-height: 35px;
       font-size: 22px;
       width:600px;
       border-radius: 5px;
       margin-right: 450px;
       margin-top: -100px;
       position: relative;
       top: 250px;
   
   }
   .submit {
   height: 35px;
   background-color: #f35588;
   border: 1px solid #f35588;
   margin-top: 10px;
   color: white;
   font-weight: 500;
   font-size: 15px;
   font-weight: bold;
   border-radius: 5px;
   cursor: pointer;
}
.submit:hover{
   background-color:rgb(26, 204, 26);
}
</style>
</head>
<body>
  <%- include("navbar_temp2.ejs") -%>
  <div class="additional">
      <%- include("menu.ejs") -%> 
      <div class="form1">
<h2>Notice</h2>

<table>
  <tr>
    <th>S No.</th>
    <th>Title</th>
    <th>Content</th>
<th>Delete</th>
  </tr>
  <% for(let i=0;i<notice.length;i++){ let j=i+1 %> 
  <tr>
    <td><%= j %> </td>
    <td><%= notice[i].subject %> </td>
    <td><p><%= notice[i].body %> </p></td>
<td><form action="/admin/deletenotice" method="post">
  <input style="z-index:-1;height:0;width:0;border:0;background:none" name="subject" value=<%= notice[i].subject %> >
            <input type="textarea" style="z-index:-1;height:0;width:0;border:0;background:none" name="body" value=<%= notice[i].body %> > 
  <button class="submit" type="submit" name="btn" value=<%= i %> >Delete</button>
</form>
</td>
  </tr>
  <% } %> 
</table>
</div>
</div>
</body>
</html>